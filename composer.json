{
    "name": "hmsoft/laravel-cms",
    "description": "A core CMS and application engine package for Laravel.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "HMsoft",
            "email": "hmsoft2000@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.1",
        "intervention/image": "^3.11",
        "spatie/laravel-data": "^4.15",
        "spatie/laravel-permission": "^6.17",
        "archtechx/enums": "^1.1",
        "urodoz/truncate-html": "@stable"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^10.0",
        "fakerphp/faker": "^1.23"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix",
        "stan": "phpstan analyse"
    },
    "autoload": {
        "psr-4": {
            "HMsoft\\Cms\\": "src/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {}
    },
    "extra": {
        "laravel": {
            "providers": [
                "HMsoft\\Cms\\Providers\\CmsServiceProvider"
            ]
        }
    },
    "keywords": [
        "laravel",
        "cms",
        "content-management",
        "multilingual",
        "api",
        "admin",
        "hmsoft"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
}